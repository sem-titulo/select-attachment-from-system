<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="attachment_selec_files_wizard_view_form" model="ir.ui.view">
        <field name="name">attachment_selec_files_wizard_view_form</field>
        <field name="model">ir.attachment.select.files.wizard</field>
        <field name="arch" type="xml">
            <form string="Selecionar Arquivos">
                <!-- Lista dentro da form -->
                <sheet>
                    <group>
                        <field name="ir_attachment_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
                    </group>
                </sheet>
                <footer>
                    <button name="action_save" string="Salvar" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>